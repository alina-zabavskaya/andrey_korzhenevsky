<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

    <definition name="default" template="/WEB-INF/jsp/layouts/default.jspx">
        <put-attribute name="header" value="/WEB-INF/jsp/views/header.jspx"/>
        <put-attribute name="navigation" value="/WEB-INF/jsp/views/navigation.jspx"/>
        <put-attribute name="footer" value="/WEB-INF/jsp/views/footer.jspx"/>
        <put-attribute name="body" value=""/>
    </definition>

    <definition name="main" extends="default">
        <put-attribute name="body" value="/WEB-INF/jsp/views/body.jsp"/>
    </definition>
</tiles-definitions>
